<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="3dp"
        android:background="#fff">

        <LinearLayout
            android:id="@+id/ll_setting_recent_read"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/view_line"/>

            <LinearLayout
                android:orientation="vertical"
                android:padding="12dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="1.在PC浏览器上访问"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginTop="35dp"
                    android:textSize="@dimen/space_23"
                    android:textColor="@color/listitem_greenyellow"
                    android:text="mbook.cc"/>

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="3dp"
        android:background="#fff">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:padding="12dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="2.请输入上传码"/>
                <TextView
                    android:id="@+id/tv_upload_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginTop="35dp"
                    android:textSize="@dimen/space_23"
                    android:textColor="@color/possible_result_points"
                    android:text="256738"/>


            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/bt_refresh_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/space_20"
            android:layout_marginLeft="@dimen/space_6"
            android:layout_marginRight="@dimen/space_6"
            android:background="@color/listitem_greenyellow"
            android:text="重新获取" />
    </LinearLayout>
</FrameLayout>
